<% data.forEach(function(item, i){ %>
 <div class="item-ls-don-hang">
    <div class="time-item">
        <%= item.arrOrder.createdAt %>
    </div>
    <% item.arr_sp_cart.forEach(function(item2, i2){ %>
    <div class="item-list-sp col-12" style="margin-bottom: 10px; border-bottom: 1px solid #ccc; padding-bottom: 10px;">
        <div class="row" >
            <div class="col-4 img-don-hang" >
                <img src="<%= item2.image %>" alt="<%= item2.tenSp %>">
            </div>
            <div class="content-item col-8">
                <div class="ten-sp">
                    <%= item2.tenSp %>
                </div>
                <div class="price">
                    <div class="row">
                            <div class="gia-sp col-8">
                                <% if(item2.sale> 0){ %> 
                                    <%= item2.giaBanSale %> - <%= item2.giaSanPham %>
                                <% } else{ %>
                                    <%= item2.giaBanSale %>
                                <% } %>
                            </div>  
                            <div class="col-2">
                               Size: <%= item2.size %>
                            </div>
                            <div class="col-2">
                                x<%= item2.soLuong %>
                            </div>

                    </div>
                </div>
               
               
            </div>
        </div>
       
    </div>
    <% }); %>  
    <% if(item.arrOrder.status == 0){ %> 
        <div class="trang-thai">
            Đơn đang được xử lý
        </div>
    <% } else{ %>
        <div class="trang-thai">
            Đã xác nhận đơn hàng
        </div>
    <% } %>
    <div class="tong">
           
                <div class="tong-sl ">
                    Số sản phẩm: <%= item.arr_sp_cart.length %>
                </div>
                <div class="tong-tien">
                    Tổng: <%= item.arrOrder.tongTien %>
                </div>
           
    </div>
    <div class="col-12" style="display: flex; justify-content: end;">
        <button class="btn btn-danger" style="padding: 5px 30px;">Hủy</button>
    </div>
    
</div>
<% }); %>  

<nav aria-label="Page navigation example">
    <ul class="pagination">
     
      <% for(var i = 1; i < totalPages ; i++) { %>
        <li class="page-item"><button class="page-link" ><%= i %></button></li>
      <% } %>

    </ul>
  </nav>
<style>
    #don-xu-ly{
        background-color: bisque;
        color: black;
    }
</style>