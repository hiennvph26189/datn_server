<!DOCTYPE html>
<html lang="en">
 
  <head>
    <%- include('../head'); %>
    <title>Đăng nhập</title>
  </head>
  <body>
    <style>
        .bg-header-nav .header-nav>ul.item_big>li.active{
            background: #252525;
        }
		#dang-ki{
			color: #66a182;
		}
		.cus-pass{
			position: relative;
		}
		.eye{
			position: absolute;
			cursor: pointer;
			right: 1%;
			top: 30%;
		}
		.error{
			color: red;
			font-size: 16px;
			font-weight: 600;
		}
    </style>
    <%- include('../header'); %>
    <div class="container ">
		<div class="row">
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
				<ul class="breadcrumb">					
					<li class="home">
						<a href="/"><span>Trang chủ</span></a>						
						<span class="mr_lr">&nbsp;<i class="fas fa-chervon-right"></i>&nbsp;</span>
					</li>
					
					<li><strong><span>Đăng nhập</span></strong></li>
					
				</ul>
			</div>
		</div>
	</div>
    <div class="container">
		<div class="row">
			<div class="col-xs-12 col-sm-12 col-md-12">
				<div class="row">
					<div class="col-lg-12 ">
						<div class="page-login">

							<div id="login">
								<span class="error"></span>
								<form method="post" action="/post-register" id="customer_register" accept-charset="UTF-8">
									
								<div class="form-signup clearfix">
									<div class="row">
										<div class="col-md-6">
											<fieldset class="form-group">
												<label> Họ<span class="required">*</span></label>
												<input type="text" class="form-control form-control-lg" value="" name="lastName" id="lastName" placeholder="" required="">
											</fieldset>
										</div>
										<div class="col-md-6">
											<fieldset class="form-group">
												<label>Tên <span class="required">*</span></label>
												<input type="text" class="form-control form-control-lg" value="" name="firstName" id="firstName" placeholder="" required="">
											</fieldset>
										</div>
									</div>
									<div class="row">
										<div class="col-md-6">
											<fieldset class="form-group">
												<label>Email <span class="required">*</span></label>
												<input type="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,63}$" class="form-control form-control-lg" value="" name="email" id="email" placeholder="" required="">
											</fieldset>
										</div>
										<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
											
											<fieldset class="form-group">
												<label>Số điện thoại <span class="required">*</span></label>
												<input type="number"  name="phone" id="phone" value="" class="form-control form-control-lg" required="">
											</fieldset>
										</div>
										<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
		
											<fieldset class="form-group" >
												<label>Mật khẩu <span class="required">*</span> </label>
												<div class="cus-pass">
													<input type="password" class="form-control form-control-lg" value="" name="password" id="password" placeholder="" required="">
													<span class="eye" id="eye-password"><i><i class="fas fa-eye"></i></i></span>
												</div>
												
											</fieldset>
										</div>
										<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
		
											<fieldset class="form-group" >
												<label>Giới tính <span class="required">*</span> </label>
												<div class="d-flex" style="margin-top: 10px;">
													<div class="form-check">
														<input class="form-check-input" type="radio" name="gioitinh" value="1" id="flexRadioDefault1">
														<label class="form-check-label" for="flexRadioDefault1">
														  Nam
														</label>
													  </div>
													  <div class="form-check" style="margin-left: 20px;">
														<input class="form-check-input" type="radio" name="gioitinh" value="2" id="flexRadioDefault2">
														<label class="form-check-label" for="flexRadioDefault2">
														  Nữ
														</label>
													  </div>
												</div>
												
												
											</fieldset>
										</div>
										<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
		
											<fieldset class="form-group">
												<label>Xác nhận mật khẩu <span class="required">*</span> </label>
												<div class="cus-pass">
													<input type="password" class="form-control form-control-lg" value="" name="re_password" id="re_password" placeholder="" required="">
													<span class="eye" id="eye-re-password"><i><i class="fas fa-eye"></i></i></span>
												</div>
											</fieldset>
										</div>
									</div>
		
		
									<div class="col-xs-12 text-xs-left" style="margin-top:30px; padding: 0">
										<button type="summit" value="Đăng ký" class="btn btn-style btn-primary-2">Đăng ký</button>
										<div style="margin-top: 10px;">
											Bạn đã có tài khoản?<a href="/get-login" class="" style=" color: red;" previewlistener="true">Đăng nhập</a>
										</div>
										
										
									</div>
									
								</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="modal fade" id="showMesses" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
		<div class="modal-dialog">
		  <div class="modal-content">
			<div class="modal-header">
			  <h5 class="modal-title" id="staticBackdropLabel">Thông báo</h5>
			  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				
			</div>
			<div class="modal-footer">
			  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"> <a href="/get-login">OK</a></button>
			</div>
		  </div>
		</div>
	  </div>
	<script>
		var check_eye_password = false;
		var check_eye_re_password = false;
		$('#eye-password').click( function() {
			check_eye_password =!check_eye_password
			
			if(check_eye_password == true){
				$('#eye-password').empty().append('<i class="fas fa-eye-slash"></i>');
				$("#password").attr("type", "text");
			}else{
				$('#eye-password').empty().append('<i class="fas fa-eye"></i>');
				$("#password").attr("type", "password");
			}
		});
		$('#eye-re-password').click( function() {
			check_eye_re_password =!check_eye_re_password
			
			if(check_eye_re_password == true){
				$('#eye-re-password').empty().append('<i class="fas fa-eye-slash"></i>');
				$("#re_password").attr("type", "text");
			}else{
				$('#eye-re-password').empty().append('<i class="fas fa-eye"></i>');
				$("#re_password").attr("type", "password");
			}
		});
		// this is the id of the form
		function resetform(){
			$("#lastName").val("");
			$("#firstName").val("");
			$("#email").val("");
			$("#phone").val("");
			$("#password").val("");
			$("#re_password").val("");
		}
		// var lastName = $("#lastName").val();
		// var firstName = $("#firstName").val();
		// var email = $("#email").val();
		// var phone = $("#phone").val();
		// var password = $("#password").val();
		// var re_password = $("#re_password").val();
		$("#customer_register").submit(function(e) {

				e.preventDefault(); // avoid to execute the actual submit of the form.

				var form = $(this);
				var actionUrl = form.attr('action');
			
				$.ajax({
					type: "POST",
					url: actionUrl,
					data: form.serialize(), 
					success: function (data) {
						if(data.errCode == 0) {
							$('.error').empty().append(data.errMessage);
						}else{
							$('.error').empty().append("");
							resetform()
							$('.modal-body').empty().append(data.errMessage);
							$('#showMesses').modal('show');
						}
						

					},
					error: function (data) {
						console.log('An error occurred.');
					
					},
				});

				});
	</script>
    <%- include('../footer'); %>
  </body>

</html>
